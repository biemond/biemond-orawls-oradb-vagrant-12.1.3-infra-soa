

ORACLE_TERM=xterm; export ORACLE_TERM

LD_LIBRARY_PATH=<%= @grid_home %>/lib
ORACLE_BASE=<%= @grid_base %>
ORACLE_HOME=<%= @grid_home %>
SQLPLUS_HOME=<%= @grid_home %>
PATH=/bin:/usr/local/bin:/usr/bin:/bin:<%= @grid_home %>/bin

<% if @grid_type  == 'HA_CONFIG' %>
export ORACLE_SID=+ASM
<% else %>
export ORACLE_SID=+ASM1
<% end %>

export ORACLE_UNQNAME=+ASM

export LD_LIBRARY_PATH
export ORACLE_BASE
export ORACLE_HOME
export SQLPLUS_HOME
export PATH

export TEMP=/tmp
export TMPDIR=/tmp
umask 022
