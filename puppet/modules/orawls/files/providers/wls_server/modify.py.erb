machineName   = '<%= machine %>'

logFilename                      = '<%= logfilename %>'
log_http_Filename                = '<%= log_http_filename %>'
log_http_format                  = '<%= log_http_format %>'
log_http_format_type             = '<%= log_http_format_type %>'
